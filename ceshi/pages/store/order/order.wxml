<!--pages/store/order/order.wxml 确认订单界面-->
<!-- 导航栏 -->
<view class="navbars" style="margin-top:{{Custom.top+StatusBar}}rpx;">
 <view class="backs" bindtap="backs"> 
  <image src="/images/icon_back.png"></image>
 </view>
 <view slot="content" class="title">确认订单</view>
</view>

<!-- 空白占位 -->
<view style="margin-top:{{Custom.top+StatusBar}}rpx;" class="blank"></view>
<view class="placeholder"></view>

<!-- 店铺信息 -->
<view class="storeInf">
 <!-- 地址logo -->
 <view class="localtionPic">
  <image src="/images/dingwei.png"></image>
 </view>
 <!-- 店铺名称和距离 -->
 <view class="storeNameAndDistens">
  <view class="StoreName">北京瑞成成产业汽修店汽修店汽修店aa测测测错测错多多多多</view>
  <view class="distens">（距您9.12公里）</view>
 </view>
 <!-- 具体地址 -->
 <view class="StoreAddr">杭州市西湖区三墩杭州市西湖区三墩杭州市西湖区三墩杭州市西湖区三墩杭州市西湖区三墩</view>
 <!-- 选择店铺 -->
 <view class="chooseStore">
  <view class="chooseTitle">点击可选其他门店</view>
  <image src="/images/arrow_black_right_pic.png"></image>
 </view>
</view>

<!-- 空白占位 -->
<view class="placeholder"></view>

<!-- 商品名称和价格 -->
<view class="goodsNameAndPriceBox">
 <view class="goodsNameAndPrice">
  <view class="goodsName">赤兔幻影全合成润滑油(含机油+机滤+工时）</view>
  <view class="price">￥158.00</view> 
 </view>
</view>
<!-- 空白占位 -->
<view class="placeholder"></view>

<!-- 部分订单信息 -->
<view class="orderInf">
 <!-- 到店时间 -->
 <view class="same">
  <view class="infTitle">到店时间</view>
  <image src="/images/arrow_black_right_pic.png"></image>
  <view class="storeTime infSame">2019-07-10 16:30:30</view>
 </view>
 <!-- 订单金额 -->
 <view class="same">
  <view class="infTitle">订单金额</view>
  <view class="orderMoney infSame xx">108.00</view>
 </view>
 <!-- 优惠券 -->
 <view class="same">
  <view class="infTitle">优惠券</view>
  <image src="/images/DisclosureIndicator.png"></image>
  <view class="yhj infSame xx">-18.00</view>
 </view>
 <!-- 实付 -->
 <view class="same">
  <view class="infTitle">实付</view>
  <view class="actpay infSame xx">实付：￥140.00</view>
 </view>
</view>

<!-- 空白占位 -->
<view class="placeholder"></view>

<!-- 支付方式 -->
<view class="payAway">
 <view class="payBox">
  <view class="payAwayChoose">选择支付方式</view>
 </view>
 <view class="payBox">
  <image class="payPic" src="/images/weixin.png"></image>
  <view class="WeChatPay pay">微信支付</view>
  <image class="choosePic" src="/images/xuanze.png"></image>
 </view>
 <view class="payBox">
 <image class="payPic" src="/images/daodianzhifu.png"></image>
  <view class="daodianzhifu pay">到店支付</view>
  <image class="choosePic" src="/images/un_storechoose_pic.png"></image>
 </view>
</view>

<!-- 空白占位 -->
<view class="placeholderdd"></view>

<!-- 点击支付 -->
<view class="payNowBox">
 <view class="payMoneySjBox">
  <view class="payMoneySjTitle">实付金额：</view>
  <view class="payMoneySjMoney">￥140.00</view>
 </view>
 <view class="payNow">立即支付</view>
</view>